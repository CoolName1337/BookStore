<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @*Set auto name for open page*@
    <title>@ViewData["Title"] - BookStore</title>

    @*general css*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    @*is for body of pages (important)*@
    <link rel="stylesheet" href="~/BookStore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div>
                <ul class="nav-ul">
                    <li> <a class="nav-a" asp-page="/Index">BookStore</a> </li>
                    <li> <a class="nav-a" asp-page="/BookPage">Каталог</a> </li>
                    <li> <a class="nav-a" asp-page="/Privacy">Избранное</a> </li>
                    <li> <a class="nav-a" asp-page="/Privacy">Мои книги</a> </li>
                    <li>
                        <form class="search-form" method="post">
                            <input type="search" name="req-search" placeholder="Любые ключевые слова..." />
                            <button class="btn-search" type="submit">🔍</button>
                        </form>
                    </li>
                    <li>
                        <p class="ballance">2000$</p>
                    </li>
                    <li>
                        <a href="#">
                            <img src="~/images/accountLogo.png" width="40" height="40"/>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <hr class="nav-main-hr"/>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; It's OK<br>
            Ноль инфы соре...
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>